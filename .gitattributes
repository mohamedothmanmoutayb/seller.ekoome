# Force all text files to use LF line endings
* text=auto eol=lf

# PHP / Laravel
*.php text eol=lf
*.blade.php text eol=lf
*.env text eol=lf

# JavaScript / React
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS / HTML
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Shell scripts
*.sh text eol=lf

# Keep binaries untouched
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.pdf binary
*.ttf binary
*.woff binary
*.woff2 binary
